{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "allowJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build",
    "declaration": false,
  },
  "include": [
    "./src",
    "./test"
  ],
  "exclude": [
    "./node_modules",
    "./build"
  ]
}